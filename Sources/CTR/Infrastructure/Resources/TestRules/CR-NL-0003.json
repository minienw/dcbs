{
   "Identifier":"CR-NL-0003",
   "Type":"Acceptance",
   "Country":"NL",
   "Version":"1.0.0",
   "SchemaVersion":"1.3.0",
   "Engine":"CERTLOGIC",
   "EngineVersion":"0.7.5",
   "CertificateType":"General",
   "Description":[
      {
         "lang":"nl",
         "desc":"Een tweede antigeen test van maximaal 24 uur oud is nodig bij oranje VOC"
      }
   ],
   "ValidFrom":"2021-05-05T00:00:00Z",
   "ValidTo":"2030-06-01T00:00:00Z",
   "AffectedFields":[
      "t.0",
      "t.0.tt",
      "from.color",
      "from.is_EU"
   ],
   "Logic":{
      "if":[
         {
            "var":"payload.t.0"
         },
         {
            "if":[
               {
                  "===":[
                     {
                        "var":"payload.from.color"
                     },
                     "orange_very_high_risk"
                  ]
               },
               {
                  "if":[
                     {
                        "===":[
                           {
                              "var":"payload.t.0.tt"
                           },
                           "LP6464-4"
                        ]
                     },
                     {
                        "if":[
                           {
                              "not-before":[
                                 {
                                    "plusTime":[ { "var":"external.validationClock" }, 0, "day" ]
                                 },
                                 {
                                    "plusTime":[ { "var":"payload.t.0.sc" }, 24, "hour" ]
                                 }
                              ]
                           },
                           {
                              "after":[
                                 {
                                    "plusTime":[ { "var":"external.validationClock" }, 0, "day" ]
                                 },
                                 {
                                    "plusTime":[ { "var":"payload.t.0.sc" }, 48, "hour" ]
                                 }
                              ]
                           },
                           true
                        ]
                     },
                     true
                  ]
               },
               true
            ]
         },
         true
      ]
   }
}
